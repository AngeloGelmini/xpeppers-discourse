{
  "variables": {
    "aws_profile": "{{env `AWS_PROFILE`}}",
    "aws_mfa": "{{env `AWS_MFA`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "mfa_code": "{{ user `aws_mfa`}}",
      "profile": "{{ user `aws_profile`}}",
      "region": "eu-west-1",
      "source_ami": "ami-06358f49b5839867c",
      "instance_type": "t2.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "discourse-{{isotime \"20060102-1504\"}}",
      "vpc_id": "vpc-0a54db76a27aa0482",
      "subnet_id": "subnet-035039620a77ba1ea",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "sudo apt-get update && sudo apt-get upgrade --yes"
    },
    {
      "type": "shell",
      "inline": "sudo apt-get install python --yes"
    },
    {
      "type": "shell",
      "inline": "sudo apt-get install --yes ansible"
    },
    {
      "type": "ansible",
      "playbook_file": "./playbooks/main.yml",
      "user": "ubuntu"
    },
    {
      "type": "shell",
      "inline": "cd /var/discourse && sudo ./launcher rebuild app"
    }
  ]
}